<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#FF000000</color>
    <color name="grey_100">#FFF5F5F5</color>
    <color name="grey_200">#FFEEEEEE</color>
    <color name="grey_300">#FFE0E0E0</color>
    <color name="grey_50">#FFFAFAFA</color>
    <color name="grey_500">#FF9E9E9E</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="red_400">#FFEF5350</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="tv_background">#FF121212</color>
    <color name="tv_button_focused">#FF2196F3</color>
    <color name="tv_button_normal">#FF424242</color>
    <color name="tv_button_pressed">#FF1976D2</color>
    <color name="tv_text_primary">#FFFFFFFF</color>
    <color name="tv_text_secondary">#FFBDBDBD</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">JeffernTV</string>
    <string name="cache_cleared">缓存已清除</string>
    <string name="cancel">取消</string>
    <string name="confirm">确认</string>
    <string name="emby_option">Emby</string>
    <string name="error_invalid_url">请输入有效的网址</string>
    <string name="error_network">网络连接失败</string>
    <string name="loading">加载中...</string>
    <string name="password_hint">密码</string>
    <string name="url_hint">请输入网址</string>
    <string name="username_hint">用户名</string>
    <string name="welcome_message">配置您的Emby服务器</string>
    <string name="welcome_title">欢迎使用 JeffernTV</string>
    <style name="TVButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/tv_button_clean</item>
    </style>
    <style name="TVEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/tv_edittext_selector</item>
    </style>
    <style name="Theme.JeffernTV" parent="Theme.Leanback">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red_400</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/grey_50</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.JeffernTV.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>